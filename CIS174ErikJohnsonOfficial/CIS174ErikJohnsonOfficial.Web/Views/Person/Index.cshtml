@model CIS174ErikJohnsonOfficial.Shared.ViewModels.PersonViewModel

@{
    ViewBag.Title = "Update Profile";
}

<script src="~/Scripts/DMACC/User.js" type="text/javascript"></script>

<h2>Update Profile</h2>

<div id="successMessage" class="hidden alert alert-success">
    Profile Successfully Updated!
</div>

<div id="errorMessage" class="hidden alert alert-danger">
    An error has occured while updating your profile.
</div>

<input id="userID" type="hidden" value="@Model.PersonId"/>

<div class="col-md-12">
    <div class="col-md-6">
        <label>Username: </label>
    </div>
    <div class="col-md-6">
        <input id="userName" type="text" class="form-control" value="@Model.UserName"/> 
    </div>
</div>
<div class="col-md-12">
    <div class="col-md-6">
        <label>Game Password: </label>
    </div>
    <div class="col-md-6">
        <input id="gamePW" type="text" class="form-control" value="@Model.Password" />
    </div>
</div>
<div class="col-md-12">
    <div class="col-md-6">
        <label>First Name: </label>
    </div>
    <div class="col-md-6">
        <input id="firstName" type="text" class="form-control" value="@Model.FirstName" required />
    </div>
</div>
<div class="col-md-12">
    <div class="col-md-6">
        <label>Last Name: </label>
    </div>
    <div class="col-md-6">
        <input id="lastName" type="text" class="form-control" value="@Model.LastName" required />
    </div>
</div>

<div class="col-md-12">
    <div class="col-md-6">
        <label>Gender: </label>
    </div>
    <div class="col-md-6">
        <input id="gender" type="text" class="form-control" value="@Model.Gender"/>
    </div>
</div>

<div class="col-md-12">
    <div class="col-md-6">
        <label>E-mail: </label>
    </div>
    <div class="col-md-6">
        <input id="email" type="email" class="form-control" value="@Model.Email" required />
    </div>
</div>

<div class="col-md-12">
    <div class="col-md-6">
        <label>Phone: </label>
    </div>
    <div class="col-md-6">
        <input id="phone" type="text" class="form-control" value="@Model.PhoneNumber" />
    </div>
</div>

<div class="col-md-12">
    <div class="col-md-6">
        <button id="updateButton" type="submit" class="btn btn-secondary" onclick="updateUser()" style="margin-top: 10px;">Update User</button>
    </div>
</div>


